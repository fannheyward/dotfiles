[user]
	name = Heyward Fann
	email = fannheyward@gmail.com
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
	trustctime = false
[alias]
	ci = commit
	st = status
	co = checkout
	p = pull
	d = diff --color
	dc = diff --color --cached
	ll = log --pretty=oneline --abbrev-commit --max-count=15
	review = log -p --max-count=1
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset<%an>' --abbrev-commit --date=relative --max-count=20
	save = stash save
    pop = stash pop
    last = log --max-count=1 --stat
	files = log --name-only
	fs = log --name-only --oneline
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[push]
	default = matching
[difftool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[http]
	proxy = socks5://127.0.0.1:1080
