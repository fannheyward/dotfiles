[user]
	name = Heyward Fann
	email = fannheyward@gmail.com
[color]
	ui = auto
[core]
	excludesfile = /Users/fannheyward/.gitignore
	trustctime = false
[alias]
	ci = commit
	st = status
	co = checkout
	p = pull --rebase
	d = diff --color
	dc = diff --color --cached
    l = log --date=iso
    ll = log --date=iso --pretty=oneline --abbrev-commit --max-count=15
	review = log -p --max-count=1
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset<%an>' --abbrev-commit --date=relative --max-count=20
	save = stash save
    pop = stash pop
    last = log --max-count=1 --stat
	files = log --name-only
	fs = log --name-only --oneline
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	git = !exec git
[push]
	default = matching
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[log]
	date = iso
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
[branch "develop"]
	rebase = true
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
[pull]
	rebase = true
